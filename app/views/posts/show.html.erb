<p id="notice"><%= notice %></p>

<h1><%=@post.title%></h2>

<p>
<%=@post.body%>
</p>

<h3>Comments:</h3>
<ul>
<%@post.comments.each do |comment|%>
	<li><%=comment.body%> - <%=comment.commentor%></li>
<%end%>
</ul>

<%= link_to 'Add Comment', new_comment_path %> |
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
